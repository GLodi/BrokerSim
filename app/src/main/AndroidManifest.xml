<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="giuliolodi.brokersim">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="giuliolodi.brokersim.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="giuliolodi.brokersim.ui.assets.AssetsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="giuliolodi.brokersim.ui.stock.StockActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="giuliolodi.brokersim.ui.market.MarketActivity">
        </activity>

    </application>

</manifest>