<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/stock_activity_content_description"
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="#000000"
        android:alpha="0.54"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stock_activity_price"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp" />

        <View
            android:id="@+id/stock_activity_div1"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/colorBackground"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/stock_activity_priceavg"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toRightOf="@id/stock_activity_div1"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stock_activity_daylow"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp" />

        <View
            android:id="@+id/stock_activity_div2"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/colorBackground"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/stock_activity_dayhigh"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toRightOf="@id/stock_activity_div2"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stock_activity_yearlow"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp" />

        <View
            android:id="@+id/stock_activity_div3"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/colorBackground"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/stock_activity_yearhigh"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toRightOf="@id/stock_activity_div3"/>

    </RelativeLayout>

    <View
        android:id="@+id/stock_activity_div4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/stock_activity_content_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground" />

</LinearLayout>