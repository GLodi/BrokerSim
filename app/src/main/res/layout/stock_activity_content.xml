<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/stock_activity_content_description"
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="#000000"
        android:alpha="0.54"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/stock_activity_div1"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/colorBackground"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/stock_activity_priceT"
            android:text="Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stock_activity_price"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/stock_activity_div1"/>

        <TextView
            android:id="@+id/stock_activity_priceavgT"
            android:text="PriceAvg50:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toRightOf="@id/stock_activity_div1"/>

        <TextView
            android:id="@+id/stock_activity_priceavg"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/stock_activity_div2"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/colorBackground"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/stock_activity_daylowT"
            android:text="DayLow:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stock_activity_daylow"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/stock_activity_div2"/>

        <TextView
            android:id="@+id/stock_activity_dayhighT"
            android:text="DayHigh:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toRightOf="@id/stock_activity_div2"/>

        <TextView
            android:id="@+id/stock_activity_dayhigh"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/stock_activity_div3"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/colorBackground"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/stock_activity_yearlowT"
            android:text="YearLow:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stock_activity_yearlow"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/stock_activity_div3"/>

        <TextView
            android:id="@+id/stock_activity_yearhighT"
            android:text="YearHigh:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_toRightOf="@id/stock_activity_div3"/>

        <TextView
            android:id="@+id/stock_activity_yearhigh"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#000000"
            android:alpha="0.87"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/stock_activity_content_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>